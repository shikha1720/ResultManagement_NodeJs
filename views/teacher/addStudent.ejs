<a href="/teacher/options" class="btn btn-info" style="margin-top:5px;">Back</a>
<h4>Add Student-Result</h4>
<form method="POST" class="addStudent" autocomplete="off">
  <div class="mb-3">
    <label for="roll_no" class="form-label">Roll No. : </label>
    <input min=1 type="number" name="roll_no" required class="form-control" id="roll_no">
  </div>

  <div class="mb-3">
    <label for="name" class="form-label">Name : </label>
    <input minlength=2 maxlength=50 type="text" name="name" required class="form-control" id="name">
  </div>

  <div class="mb-3">
    <label for="date_of_birth" class="form-label">Date of Birth : </label>
    <input type="date" name="date_of_birth" class="form-control" required id="date_of_birth" max="">
  </div>

  <div class="mb-3">
    <label for="score" class="form-label">Score : </label>
    <input min=0 max=100 type="number" name="score" required class="form-control" id="score">
  </div>

  <button type="submit" class="btn btn-success">Add</button>
  <button type="reset" class="btn btn-danger">Clear</button>
  <button type="button" class="btn btn-primary">
    <a class="link" href="/teacher/viewAll">View All</a>
  </button>
</form>

<!-- for disabling future dates-->
<script>
  var today = new Date().toISOString().split('T')[0];
  document.getElementById("date_of_birth").setAttribute("max", today);
</script>

<!-- for alert popup-->
<script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
<script>
    const messages = '<%= message %>';
    if (messages == "Rollnumber Already Exists.") {
        alertify.set('notifier', 'position', 'bottom-center')
        alertify.warning(messages);
    }
</script>